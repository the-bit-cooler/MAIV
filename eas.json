{
  "cli": {
    "version": ">= 16.20.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "autoIncrement": false,
      "developmentClient": true,
      "distribution": "internal"
    },
    "ios-simulator": {
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "environment": "production",
      "ios": {
        "autoIncrement": "buildNumber"
      },
      "android": {
        "autoIncrement": "versionCode"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal" // or "beta", "alpha", "production"
      }
    }
  }
}